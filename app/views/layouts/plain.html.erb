<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) || 'Untitled' %></title>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= yield(:head) %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="container">

  <%- flash.each do |name, msg| -%>
      <%= content_tag :div, msg, id: "flash_#{name}" %>
  <%- end -%>

  <%- if show_title? -%>
      <h1><%= yield(:title) %></h1>
  <%- end -%>

  <%= yield %>
</div>
</body>
</html>
