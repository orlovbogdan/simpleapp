<p id="notice"><%= notice %></p>

<h1>Listing Pages</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Slug</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.name %></td>
        <td><%= page.slug %></td>
        <td><%= page.content %></td>
        <td><%= link_to 'Show', page %></td>
        <% if allow?(:pages, :edit, page) %>
          <td><%= link_to 'Edit', edit_page_path(page) %></td>
        <% end %>
        <% if allow?(:pages, :destroy) %>
          <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if allow?(:pages, :new) %>
<%= link_to 'New Page', new_page_path %>
<% end %>
<p><%#= button_to "Try it for free!", users_path, method: :post %></p>